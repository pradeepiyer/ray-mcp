[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Custom rules for tool functions
# This will be enforced by our custom linting script
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    build,
    dist,
    *.egg-info,
    htmlcov,
    .coverage,
    .pytest_cache

# Per-file ignores
per-file-ignores =
    # Ignore import errors in test files
    tests/*:F401,F403
    # Ignore unused imports in __init__.py files
    */__init__.py:F401 